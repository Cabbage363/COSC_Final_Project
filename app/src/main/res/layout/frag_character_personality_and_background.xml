<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivImgBackground3"
        android:layout_width="411dp"
        android:layout_height="734dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/card_background" />

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/dnd_font"
        android:text="@string/characterInfo"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spGender"
        style="@style/spinnerTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_spinner_filler"
        android:dropDownVerticalOffset="40dp"
        app:layout_constraintBottom_toTopOf="@+id/spAlignment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintStart_toEndOf="@+id/tvGender"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader"
        tools:ignore="SpeakableTextPresentCheck" />

    <Spinner
        android:id="@+id/spAlignment"
        style="@style/spinnerTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_spinner_filler"
        android:dropDownVerticalOffset="80dp"
        app:layout_constraintBottom_toTopOf="@+id/ettTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toEndOf="@+id/tvAlign"
        app:layout_constraintTop_toBottomOf="@+id/spGender"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvAlign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="22dp"
        android:fontFamily="@font/dnd_font"
        android:text="@string/alignment"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ettTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGender" />

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/dnd_font"
        android:text="@string/gender"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvAlign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader" />

    <EditText
        android:id="@+id/ettFirstName"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:fontFamily="@font/dnd_font"
        android:inputType="textPersonName"
        android:text="@string/firstName"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ettLastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ettTitle" />

    <EditText
        android:id="@+id/ettLastName"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:fontFamily="@font/dnd_font"
        android:inputType="textPersonName"
        android:text="@string/lastName"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ettFeet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ettFirstName" />

    <EditText
        android:id="@+id/ettTitle"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:ems="10"
        android:fontFamily="@font/dnd_font"
        android:inputType="textPersonName"
        android:text="@string/title"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ettFirstName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spAlignment" />

    <TextView
        android:id="@+id/tvHieght"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/dnd_font"
        android:text="@string/height"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ettLastName" />

    <EditText
        android:id="@+id/ettFeet"
        android:layout_width="32dp"
        android:layout_height="27dp"
        android:layout_marginEnd="13dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toStartOf="@+id/tvIn"
        app:layout_constraintStart_toEndOf="@+id/tvFT"
        app:layout_constraintTop_toBottomOf="@+id/ettLastName" />

    <EditText
        android:id="@+id/ettInch"
        android:layout_width="32dp"
        android:layout_height="27dp"
        android:layout_marginEnd="120dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/tvIn"
        app:layout_constraintTop_toBottomOf="@+id/ettLastName" />

    <TextView
        android:id="@+id/tvFT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="18dp"
        android:text="@string/ft"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toStartOf="@+id/ettFeet"
        app:layout_constraintStart_toEndOf="@+id/tvHieght"
        app:layout_constraintTop_toBottomOf="@+id/ettLastName" />

    <TextView
        android:id="@+id/tvIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/in"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toStartOf="@+id/ettInch"
        app:layout_constraintStart_toEndOf="@+id/ettFeet"
        app:layout_constraintTop_toBottomOf="@+id/ettLastName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/userBackGround"
        app:layout_constraintBottom_toTopOf="@+id/etmBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ettFeet" />

    <EditText
        android:id="@+id/etmBackground"
        android:layout_width="222dp"
        android:layout_height="140dp"
        android:background="@color/GrayLight"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>